generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Story {
  id               String   @id @default(cuid())
  slug             String   @unique
  title            String   @db.VarChar(500)
  content          String   @db.Text
  theme            String   @db.VarChar(100)
  style            String   @db.VarChar(100)
  excerpt          String?  @db.Text
  published        Boolean  @default(false)
  views            Int      @default(0)
  seoTitle         String?  @db.VarChar(500)
  seoDescription   String?  @db.Text
  femaleAppearance String?  @db.Text
  storyType        String   @default("real") @db.VarChar(50)
  intensity        Int      @default(5)
  city             String?  @db.VarChar(200)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  locationId       String?
  location         Location? @relation(fields: [locationId], references: [id])

  @@index([slug])
  @@index([published])
  @@index([createdAt])
  @@index([locationId])
  @@index([storyType])
  @@index([intensity])
  @@index([city])
  @@index([published, storyType])
  @@index([published, createdAt])
  @@index([published, storyType, intensity])
}

model Location {
  id          String   @id @default(cuid())
  name        String   @db.VarChar(200)
  slug        String   @unique @db.VarChar(200)
  description String?  @db.Text
  storyType   String   @db.VarChar(50)
  stories     Story[]
  createdAt   DateTime @default(now())

  @@index([storyType])
  @@index([slug])
  @@unique([name, storyType])
}

