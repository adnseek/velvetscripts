generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Story {
  id               String   @id @default(cuid())
  slug             String   @unique
  title            String   @db.VarChar(500)
  content          String   @db.Text
  theme            String   @db.VarChar(100)
  style            String   @db.VarChar(100)
  excerpt          String?  @db.Text
  published        Boolean  @default(false)
  views            Int      @default(0)
  seoTitle         String?  @db.VarChar(500)
  seoDescription   String?  @db.Text
  femaleAppearance String?  @db.Text
  storyType        String   @default("real") @db.VarChar(50)
  intensity        Int      @default(5)
  city             String?  @db.VarChar(200)
  heroImage        String?  @db.VarChar(500)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  locationId       String?
  location         Location? @relation(fields: [locationId], references: [id])
  images           StoryImage[]

  // Primary listing query: WHERE published=true ORDER BY createdAt DESC
  @@index([published, createdAt(sort: Desc)])
  // Filtered queries: published + storyType/city/intensity + sort
  @@index([published, storyType, createdAt(sort: Desc)])
  @@index([published, city, createdAt(sort: Desc)])
  @@index([published, intensity, createdAt(sort: Desc)])
  @@index([published, storyType, intensity, createdAt(sort: Desc)])
  // Foreign key + lookup
  @@index([locationId])
  @@index([slug])
}

model StoryImage {
  id          String   @id @default(cuid())
  storyId     String
  story       Story    @relation(fields: [storyId], references: [id], onDelete: Cascade)
  sectionIdx  Int      // which H2 section this image belongs to (0-based)
  heading     String?  @db.VarChar(500)
  prompt      String   @db.Text
  filename    String   @db.VarChar(500)
  width       Int      @default(1024)
  height      Int      @default(1024)
  createdAt   DateTime @default(now())

  // Efficient join from Story + sort by sectionIdx
  @@index([storyId, sectionIdx])
  @@unique([storyId, sectionIdx])
}

model Location {
  id          String   @id @default(cuid())
  name        String   @db.VarChar(200)
  slug        String   @unique @db.VarChar(200)
  description String?  @db.Text
  storyType   String   @db.VarChar(50)
  stories     Story[]
  createdAt   DateTime @default(now())

  @@index([storyType])
  @@index([slug])
  @@unique([name, storyType])
}

model Subscriber {
  id             String   @id @default(cuid())
  email          String   @unique @db.VarChar(300)
  unsubscribeKey String   @unique @default(cuid()) @db.VarChar(100)
  active         Boolean  @default(true)
  createdAt      DateTime @default(now())

  @@index([active])
  @@index([email])
}

model Submission {
  id          String   @id @default(cuid())
  authorName  String   @db.VarChar(200)
  authorEmail String?  @db.VarChar(300)
  title       String   @db.VarChar(500)
  content     String   @db.LongText
  status      String   @default("pending") @db.VarChar(50) // pending, approved, rejected
  adminNote   String?  @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([status])
  @@index([createdAt])
}
